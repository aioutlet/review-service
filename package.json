{
  "name": "review-service",
  "version": "1.0.0",
  "description": "AI Outlet Review and Rating Service",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "prod": "NODE_ENV=production node src/app.js",
    "dev": "nodemon src/app.js",
    "dapr": "dotenv -e .env -- dapr run --app-id review-service --app-port 9001 --dapr-http-port 3501 --dapr-grpc-port 50002 --resources-path .dapr/components --config .dapr/config.yaml --enable-api-logging=false --placement-host-address \"\" --log-level warn -- npm run dev",
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand",
    "test:integration": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand tests/integration/",
    "test:e2e": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand tests/e2e/dapr-event-flow-manual.e2e.test.js --testTimeout=30000",
    "test:e2e:auto": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand tests/e2e/dapr-event-flow.e2e.test.js --testTimeout=30000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "review",
    "rating",
    "microservice",
    "nodejs"
  ],
  "author": "AI Outlet Team",
  "license": "MIT",
  "dependencies": {
    "@dapr/dapr": "^3.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^29.6.4",
    "@types/colors": "^1.1.3",
    "axios": "^1.13.2",
    "babel-jest": "^30.1.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1"
  }
}
